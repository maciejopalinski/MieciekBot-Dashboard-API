{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "dist",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "package.json"
    ],
    "exclude": [
        "node_modules"
    ]
}